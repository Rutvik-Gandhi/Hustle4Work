<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:paddingBottom="10dp"
    android:fitsSystemWindows="true"
  >

    <ImageView
        android:id="@+id/back_reset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/tvOtp"
        android:layout_width="@dimen/zero_dp"
        android:layout_weight="9"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/otp"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/poppins_regular"
        android:textColorHint="@color/black"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/back_reset"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:hint="@string/skill"



        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_otp"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOtp">

        <LinearLayout
            android:id="@+id/otp_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"


            android:padding="@dimen/twelve_dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"

                    android:src="@drawable/otp"
                    ></ImageView>
            </LinearLayout>


            <EditText
                android:id="@+id/editotp"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="9"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/otp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvpasswordreset"
        android:layout_width="@dimen/zero_dp"
        android:layout_weight="9"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/password"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/poppins_regular"
        android:textColorHint="@color/black"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_otp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:hint="@string/skill"



        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_passreset"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvpasswordreset">

        <LinearLayout
            android:id="@+id/passreset_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"


            android:padding="@dimen/twelve_dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"

                    android:src="@drawable/otp"
                    ></ImageView>
            </LinearLayout>


            <EditText
                android:id="@+id/etpassreset"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="9"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvcfrmpassreset"
        android:layout_width="@dimen/zero_dp"
        android:layout_weight="9"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="20sp"

        android:text="@string/confrmpassword"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/poppins_regular"
        android:textColorHint="@color/black"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_passreset"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"




        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cnfmreset"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvcfrmpassreset">

        <LinearLayout
            android:id="@+id/cv_cnfmreset_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"


            android:padding="@dimen/twelve_dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"

                    android:src="@drawable/otp"
                    ></ImageView>
            </LinearLayout>


            <EditText
                android:id="@+id/etcnfmreset"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="9"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/confrmpassword"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_confrm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="35dp"
        app:cardElevation="4dp"
        android:background="@color/background"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="32dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_cnfmreset">

        <LinearLayout
            android:id="@+id/confrm_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:background="@color/background"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvconformreset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="16sp"
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>














</androidx.constraintlayout.widget.ConstraintLayout>