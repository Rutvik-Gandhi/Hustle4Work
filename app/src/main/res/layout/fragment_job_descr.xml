<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Gery">



        <LinearLayout

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/toolbar_desc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@color/background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_desc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                app:tint="@color/white" />

            <!-- TextView in Toolbar for Title -->


            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_gravity="center" >
            </TextView>


        </LinearLayout>


        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
         android:layout_marginTop="70dp"

        app:layout_constraintStart_toStartOf="parent"

      >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

           >




    <androidx.cardview.widget.CardView
        android:id="@+id/cv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="32dp"
       app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/user_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/twelve_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_desctitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="23sp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/jobsearch"

                android:layout_marginLeft="5dp"
                ></ImageView>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_typejob"
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="9"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/jobtype"



            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dollar"
                    android:layout_marginLeft="5dp"
                    ></ImageView>
            </LinearLayout>


            <TextView
                android:id="@+id/tvRatepay"
                android:layout_width="@dimen/zero_dp"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:hint="@string/payrate"



                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendar"
                    android:layout_marginLeft="5dp"
                    ></ImageView>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_Date"
                android:layout_width="@dimen/zero_dp"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:hint="@string/date"



                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pin"
                    android:layout_marginLeft="5dp"
                    ></ImageView>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_locati"
                android:layout_width="@dimen/zero_dp"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text=""
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:hint="@string/location"



                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/information"
                    android:layout_marginLeft="5dp"
                    ></ImageView>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_requ"
                android:layout_width="@dimen/zero_dp"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="18sp"

                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:hint="@string/requi"



                />

        </LinearLayout>






    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_detail">

    <LinearLayout
        android:id="@+id/des_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/twelve_dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:layout_marginTop="10dp"

            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>

        <TextView
            android:id="@+id/desctv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Job Description"
            android:textColor="@color/black"
            android:textSize="18sp"></TextView>


    </LinearLayout>




    </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_applied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="35dp"
                app:cardElevation="4dp"

                android:layout_marginTop="20dp"
                android:background="@color/background"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cv_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <LinearLayout
                    android:id="@+id/app_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45dp"
                    android:paddingRight="45dp"
                    android:background="@color/background"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvapplied"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apply Now"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        ></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/appliedUse_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Applied User"
                android:visibility="gone"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toBottomOf="@+id/cv_desc"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="18sp"
                ></TextView>

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/recycler_view_Emp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toBottomOf="@+id/appliedUse_txt"
                app:layout_constraintStart_toStartOf="parent"

                />




    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>