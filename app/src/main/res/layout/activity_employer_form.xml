<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Gery"


    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gery"
        android:layout_marginBottom="50dp"
        >

        <LinearLayout

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/emp_ll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@color/background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_emp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                app:tint="@color/white" />

            <!-- TextView in Toolbar for Title -->
            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Details"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_gravity="center" >

            </TextView>


        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"

            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/emp_ll"
            />




        <androidx.cardview.widget.CardView
            android:id="@+id/cv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            >


            <LinearLayout
                android:id="@+id/titleq_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twelve_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tag"

                        android:layout_marginLeft="5dp"
                        ></ImageView>
                </LinearLayout>


                <EditText
                    android:id="@+id/edittitle"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"



                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"

            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/desc"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_title"
            />




        <androidx.cardview.widget.CardView
            android:id="@+id/cv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            >


            <LinearLayout
                android:id="@+id/title_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twelve_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"

android:gravity="start"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/information"

                        android:layout_marginLeft="5dp"
                        ></ImageView>
                </LinearLayout>


                <EditText
                    android:id="@+id/etDesc"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:hint="@string/desc"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"


                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_loc"
            android:layout_width="match_parent"

            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/location"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_desc"
            />




        <androidx.cardview.widget.CardView
            android:id="@+id/cv_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_loc"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            >


            <LinearLayout
                android:id="@+id/loc_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twelve_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pinlocation"

                        android:layout_marginLeft="5dp"
                        ></ImageView>
                </LinearLayout>


                <EditText
                    android:id="@+id/etloc"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/location"



                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_req"
            android:layout_width="match_parent"

            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/requi"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_loc"
            />




        <androidx.cardview.widget.CardView
            android:id="@+id/cv_req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_req"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            >


            <LinearLayout
                android:id="@+id/req_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twelve_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/writing"

                        android:layout_marginLeft="5dp"
                        ></ImageView>
                </LinearLayout>


                <EditText
                    android:id="@+id/etreq"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/requi"



                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_payrate"
            android:layout_width="match_parent"

            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/payrate"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_req"
            />




        <androidx.cardview.widget.CardView
            android:id="@+id/cv_payrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_payrate"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            >


            <LinearLayout
                android:id="@+id/pay_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twelve_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/dollar"

                        android:layout_marginLeft="5dp"
                        ></ImageView>
                </LinearLayout>


                <EditText
                    android:id="@+id/etpay"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/payrate"



                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_jobtype"
            android:layout_width="match_parent"

            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/jobtype"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_payrate"
            />




        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tv_jobtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_jobtype"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            >


            <LinearLayout
                android:id="@+id/tv_jobtype_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twelve_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/jobsearch"

                        android:layout_marginLeft="5dp"
                        ></ImageView>
                </LinearLayout>


                <EditText
                    android:id="@+id/et_jobtype"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/jobtype"



                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>








        <TextView
            android:id="@+id/btnSaveEmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="@dimen/fifteen_sp"
            android:background="@drawable/edittext_rounded_background"
            android:paddingLeft="@dimen/sixty_dp"
            android:paddingRight="@dimen/sixty_dp"
            android:paddingTop="@dimen/twelve_dp"
            android:paddingBottom="@dimen/twelve_dp"

            android:textColor="@color/white"

            android:textAllCaps="true"

            android:layout_marginBottom="@dimen/fifty_dp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@id/cv_tv_jobtype"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/thirty_two_dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
           android:background="@color/Gery"
            app:layout_constraintTop_toBottomOf="@id/btnSaveEmp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></View>






    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>